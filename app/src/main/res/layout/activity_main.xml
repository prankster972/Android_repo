<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <ListView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:id="@+id/list_view"
            android:focusableInTouchMode="true"/>


    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="184dp"
        android:layout_height="301dp"
        android:layout_toEndOf="@id/spinner"
        tools:layout_editor_absoluteX="434dp"
        tools:layout_editor_absoluteY="16dp">


        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            tools:layout_editor_absoluteX="535dp"
            tools:layout_editor_absoluteY="132dp">

            <RadioButton
                android:id="@+id/RB1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="быстро" />

            <RadioButton
                android:id="@+id/RB2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="давно" />

            <RadioButton
                android:id="@+id/RB3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="долго" />

        </RadioGroup>
    </TableLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="287dp"
        android:layout_height="35dp"
        tools:layout_editor_absoluteX="222dp"
        tools:layout_editor_absoluteY="29dp"
        android:layout_toEndOf="@id/list_view" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:onClick="CreateText"
        tools:layout_editor_absoluteX="316dp"
        tools:layout_editor_absoluteY="329dp"
        android:layout_toStartOf="@id/table_layout"
        android:layout_toEndOf="@id/list_view"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignStart="@id/spinner"
        android:layout_alignBottom="@id/table_layout" />


</RelativeLayout>