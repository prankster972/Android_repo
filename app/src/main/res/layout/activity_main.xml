<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <ListView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:id="@+id/list_view"
            android:focusableInTouchMode="true"
            android:layout_alignBottom="@id/textView"/>


    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="184dp"
        android:layout_height="301dp"
        android:layout_toEndOf="@id/spinner"
        tools:layout_editor_absoluteX="434dp"
        tools:layout_editor_absoluteY="16dp">


        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="310dp"
            tools:layout_editor_absoluteX="535dp"
            tools:layout_editor_absoluteY="132dp"
            style="@style/radioBTN"
            >

            <RadioButton
                android:id="@+id/RB1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="быстро"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/RB2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="давно" />

            <RadioButton
                android:id="@+id/RB3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="долго" />

        </RadioGroup>
    </TableLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="287dp"
        android:layout_height="35dp"
        tools:layout_editor_absoluteX="222dp"
        tools:layout_editor_absoluteY="29dp"
        android:layout_toEndOf="@id/list_view" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        android:onClick="CreateText"
        android:layout_toStartOf="@id/table_layout"
        android:layout_toEndOf="@id/list_view"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:drawableBottom="@color/black"
        android:layout_alignStart="@id/spinner"
        android:layout_marginBottom="80dp"
        android:layout_alignBottom="@id/table_layout"/>

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="204dp"
        android:layout_height="60dp"
        android:layout_above="@+id/textView"
        android:layout_below="@+id/spinner"
        android:layout_toStartOf="@+id/table_layout"
        android:layout_toEndOf="@+id/list_view"
        android:ems="10"
        android:inputType="text"
        android:text=""
        />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_alignParentBottom="true"
        android:onClick="add"/>

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/imageButton2"
        app:srcCompat="@android:drawable/ic_delete"
        android:onClick="remove"/>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageButton3"
        android:layout_marginStart="21dp"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:onClick="select"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton3"
        android:layout_below="@+id/list_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="44dp"
        android:layout_toStartOf="@+id/textView"
        android:text="ЧеРеД"
        android:onClick="choose"/>


</RelativeLayout>